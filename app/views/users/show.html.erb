<h3><%= current_user.username %>'s Account</h3>



<div class="col-md-3">
      <% @videos.iterate_every(4) do |video| %>
      <div class="simple">
      <p><%= link_to video.title, video %> <%= "(#{video.filmed_where})" %></p>
      <iframe width="272" height="168" src="<%= video.embed_link %>" frameborder="0" allowfullscreen></iframe>
        <br>
      <span><%= video.tags %></span> &nbsp; | &nbsp;
      <span><%= video.filmed_when%></span>
  <div class = "controls">
    <% if current_user %>
     <span><%= link_to "Edit", edit_video_path(video) %> </span> &nbsp; | &nbsp;
     <span><%= link_to "Remove", video_path(video.id), method: "DELETE",
     data: {confirm: "Are you sure you want to delete this video?"} %> </span> &nbsp; | &nbsp;
     <span><%=link_to "Comment this video", new_video_comment_path(video)%></span>
    <% end %>
   </div>
   </div>
      <% end %>
</div>

