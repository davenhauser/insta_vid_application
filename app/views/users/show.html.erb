<h3><%= current_user.username %>'s Account</h3>

<div class="col-md-3">
  <% @videos.iterate_every(4) do |video| %>
    <div class="simple_user">
    <h4><%= link_to video.title, video %>
    <br>
    <%= "(#{video.filmed_where})" %></h4>
    <iframe width="290" height="350" src="<%= video.embed_link %>" frameborder="0" allowfullscreen></iframe>
    <br>
    <span><%= video.tags %></span>&nbsp;
    <span>(<%= video.filmed_when%>)</span>

    <div class = "controls">
      <% if current_user %>
        <span><%= link_to "Edit", edit_video_path(video) %> </span>
        | <span><%= link_to "Remove", video_path(video.id), method: "DELETE",
        data: {confirm: "Are you sure you want to delete this video?"} %> </span>|
        <span><%=link_to "Comment", video_path(video)%></span>
  <% end %>
     </div>
   </div>
      <% end %>
</div>

